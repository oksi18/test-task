generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  role     Role?
  Admin    Admin[]
  boss     Boss?   @relation(fields: [bossId], references: [id])
  bossId   String? @db.ObjectId
}

model Boss {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  password       String
  bossId         String?
  Admin          Admin[]
  assignUsersIds String[]
  User           User[]
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  role     Role?
  boss     Boss   @relation(fields: [bossId], references: [id])
  user     User   @relation(fields: [userId], references: [id])
  bossId   String @db.ObjectId
  userId   String @db.ObjectId
}

enum Role {
  ADMIN
  BOSS
  USER
}
